#!/usr/bin/env ruby
# -*-Ruby-*-

require 'pry'
require "awesome_print"


# where to look for nmon_files
# by default nmon_visualizer create a <>/nmon/rawdata directory

@simulation=%Q[#{ENV["CACHEDIR"]}/#{ENV["simulation"]}]
@nmon_dir = %Q[#{@simulation}/nmon/rawdata]

Dir.chdir(@nmon_dir)

@files = Dir['*.csv'].select do |file|
  !(file.include? 'processes')
end

ftokens = @files.map do |file|
  no_epoch = file.gsub(/-\d{10}/, '-')
  no_epoch.split(/[\s._-]/)
end

fterse = ftokens.map do |ftoken|
  [ftoken[4], ftoken[6]].join("-")
end

in_out = @files.zip(fterse).map { |a|
  cmd = %Q[java -jar /home/stn/projects/nmonvisualizer_ext/target/uberjar/nmonvisualizer_ext-0.1.0-SNAPSHOT-standalone.jar "#{@nmon_dir}/#{a[0]}" "#{@simulation}/cpu_#{a[1]}.csv"]
  res = %x[#{cmd}]
  {cmd => res}
}

pp in_out
